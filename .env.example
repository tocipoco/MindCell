# MindCell Environment Variables

# Chain Configuration
CHAIN_ID=mindcell-1
MONIKER=my-node

# Network
RPC_ENDPOINT=https://rpc.mindcell.network
API_ENDPOINT=https://api.mindcell.network
GRPC_ENDPOINT=grpc.mindcell.network:9090

# Node Configuration
HOME_DIR=$HOME/.mindcell
MINIMUM_GAS_PRICES=0.001mcell

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=26660

# Performance
MAX_CONCURRENT_INFERENCES=100
CACHE_SIZE_MB=1024
CACHE_TTL_SECONDS=300
